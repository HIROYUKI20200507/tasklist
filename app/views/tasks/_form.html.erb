<%= form_with(model: task, local: true) do |f| %>
  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>

  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_tasks.each do |tsk| %>
          <li><%= tsk %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :title, 'タスク' %>
  <%= f.text_field :title %>

  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>

  <%= f.submit '投稿' %>
<% end %>